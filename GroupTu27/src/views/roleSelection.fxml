<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="controllers.RoleSelectionController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <!-- Title -->
    <Label text="Select a Role" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />

    <!-- List of Roles -->
    <ListView fx:id="roleListView" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" prefWidth="200" prefHeight="150" />

    <!-- Select Button -->
    <Button text="Select Role" onAction="#onSelectRole" GridPane.rowIndex="2" GridPane.columnIndex="0" />

    <!-- Cancel Button -->
    <Button text="Cancel" onAction="#onCancel" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    
</GridPane>

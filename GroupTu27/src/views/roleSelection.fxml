<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="240.0" prefWidth="520.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="controllers.RoleSelectionController">
    <Label text="Select a Role for this Session:">
      <font>
         <Font name="System Bold" size="24.0" />
      </font></Label>
    <ComboBox fx:id="roleComboBox" promptText="Choose Role" />
    
    <Button onAction="#handleSelectRole" text="Continue" />
</VBox>
